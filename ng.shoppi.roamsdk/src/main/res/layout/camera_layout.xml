<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/editTextBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/cameraLabel"
            style="@style/FormFieldLabels"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/imageViewCameraButton"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Is Outlet Exclusive?"
            android:textColor="#000"/>

        <ImageView
            android:id="@+id/imageViewCameraButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:tint="@color/colorAccent"
            android:src="@drawable/camera_alt_black_48x48"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#777"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewPictures"
        android:layout_width="match_parent"
        android:layout_height="155dp"/>

</LinearLayout>